{
  "extends": [
    "eslint:recommended",
    "@eleks/eleks",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true,
    "mocha": true,
    "mongo": true,
    "jasmine": true
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "info",
          "warn",
          "error"
        ]
      }
    ],
    "quotes":	[2,	"single"],
    "eol-last":	0
  },
  "parserOptions": {
    "ecmaVersion": 6
  }
}
